<%- include('header'); -%>

<style>
  .my-form {
    visibility: hidden;
  }

  .show {
    visibility: visible;
  }
</style>
<div class="container">
  <h1>Goal Dashboard</h1> <button id="add-btn" onClick="toggleForm()">Add New Task</button>
  <div class="row goal-panel-row">
    <% if(goals){ %>
    <% goals.forEach(function(e, index){ %>
    <div class="col-md-4">
      <div class="goal-panel">
        <form class="" action="/delete" method="post">
          <input type="hidden" name="goalName" value="<%= e.goalName %>">
          <input type="submit" value="x">
        </form>
        <%= e.goalName %>
        <hr>
        Days Remaining
        <%= e.daysNeeded - (Math.round(Math.abs((e.dateCreated.getTime() - todaysDate.getTime())/(24*60*60*1000))))%>
        <hr>
        Status
        <% if(e.completed == true){ %>
          <span class="success">Completed</span>
        <% } else { %>
          <span class="incomplete">In Progress</span>
        <% } %>
      </div>
    </div>
    <%  }) %>
    <% } %>
  </div>

  <div class="container my-form" id="hidden">
    <form class="action-form" action="/dashboard" method="post">
      What do you want to do?
      <input type="text" name="goalName" placeholder="">
      <br>
      How many days do you need?
      <input type="text" name="daysNeeded" placeholder="">
      <br>
      <button id='submit-button' type="submit">Add Goal</button>
    </form>
  </div>
</div>

<script>
  document.getElementById('add-btn').addEventListener('click', function() {
    this.innerHTML == "Add New Task" ? this.innerHTML = "Cancel" : this.innerHTML = "Add New Task";
  })

  function toggleForm() {
    var newGoalForm = document.getElementById("hidden");
    newGoalForm.classList.toggle("show");
  }
</script>

<%- include('footer'); -%>
